<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/applicant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@drawable/priamrybtn"
            android:text="Applicant's Residence"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="30dp"
            android:id="@+id/icon_1"
            android:src="@drawable/check"
            android:layout_gravity="center_vertical"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/collateral"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@drawable/priamrybtn"
            android:text="Applicant's Collateral"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="30dp"
            android:id="@+id/icon_2"
            android:src="@drawable/check"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/guarantor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:background="@drawable/priamrybtn"
            android:text="Guarantor"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="30dp"
            android:id="@+id/icon_3"
            android:src="@drawable/check"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp">

        <TableRow
            android:background="@color/baby_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Coordinates"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Applicant's Home"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/home_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Collateral Location"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/home_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Guarantor's Home"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/home_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="10sp"
                android:textSize="12sp"
                android:layout_weight="6"
                android:gravity="center_horizontal"/>

        </TableRow>

    </TableLayout>

</LinearLayout>